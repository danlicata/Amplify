---
import { Image } from "astro:assets";
import type { UserDetails } from "../types";
import {
    BriefcaseIcon,
    MapPinIcon,
    PencilSquareIcon,
} from "@heroicons/react/24/outline";

interface Props {
    userDetails: UserDetails;
}

const { userDetails } = Astro.props;
---

<section
    class="bg-gradient-to-r from-blue-600 to-blue-400 text-white py-12 text-center relative overflow-hidden shadow-md"
>
    <Image
        src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-1.2.1&auto=format&fit=crop&w=1351&q=80"
        alt="Welcome banner"
        class="absolute inset-0 w-full h-full object-cover opacity-20 pointer-events-none"
        loading="eager"
        width={1351}
        height={800}
    />
    <div class="relative z-10 max-w-7xl mx-auto px-6">
        <h1
            class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-4 drop-shadow-md animate-fade-in"
        >
            {
                (() => {
                    const hour = new Date().getHours();
                    if (hour < 12) return "Good morning";
                    if (hour < 18) return "Good afternoon";
                    return "Good evening";
                })()
            },
            {userDetails.firstName}!
        </h1>
        <div
            class="flex flex-col items-center justify-center text-base md:text-lg lg:text-xl font-medium drop-shadow max-w-3xl mx-auto animate-slide-in-up"
        >
            <div class="flex items-center gap-2 mb-1">
                <BriefcaseIcon className="w-5 h-5" />
                <span>{userDetails.jobTitle} â€¢ {userDetails.component}</span>
            </div>
            <div class="flex items-center gap-2">
                <MapPinIcon className="w-5 h-5" />
                <span
                    >{userDetails.workLocation}
                    {userDetails.officeLocation}</span
                >
            </div>
        </div>
        <div class="mt-4 flex items-center justify-center">
            <button
                type="button"
                class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 hover:bg-white/20 text-white font-medium rounded-lg transition-all duration-200 ease-in-out transform hover:-translate-y-0.5 cursor-pointer"
                onclick="document.dispatchEvent(new CustomEvent('start-ai-chat', { detail: { message: 'Update my information' } }))"
                aria-label="Request to update your user information"
            >
                <PencilSquareIcon className="w-5 h-5" />
                Update my info
            </button>
        </div>
    </div>
</section>
