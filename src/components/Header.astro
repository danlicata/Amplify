---
import UserAvatar from "./UserAvatar";
---

<header class="bg-slate-800 text-white shadow-md sticky top-0 z-50">
    <div
        class="container mx-auto px-6 py-4 flex justify-between items-center max-w-7xl"
    >
        <!-- Logo -->
        <div class="text-2xl md:text-3xl font-bold">Company Name</div>

        <!-- User Avatar with Settings -->
        <div class="flex items-center gap-4">
            <UserAvatar client:visible showSettings={true} />
        </div>
    </div>
</header>
